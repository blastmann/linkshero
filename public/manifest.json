{
  "manifest_version": 3,
  "name": "Links Hero",
  "description": "扫描当前页面的下载链接并推送到 aria2",
  "version": "0.1.0",
  "icons": {
    "16": "icons/16x16.png",
    "32": "icons/32x32.png",
    "48": "icons/48x48.png",
    "128": "icons/128x128.png"
  },
  "action": {
    "default_title": "Links Hero",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/16x16.png",
      "32": "icons/32x32.png",
      "48": "icons/48x48.png",
      "128": "icons/128x128.png"
    }
  },
  "options_page": "options.html",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "permissions",
    "webNavigation",
    "tabs",
    "contextMenus",
    "notifications"
  ],
  "host_permissions": [
    "http://127.0.0.1:6800/*",
    "http://localhost:6800/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "content.js",
        "assets/*.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}