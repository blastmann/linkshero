{
  "manifest_version": 3,
  "name": "Links Hero",
  "description": "扫描当前页面的下载链接并推送到 aria2",
  "version": "0.1.0",
  "action": {
    "default_title": "Links Hero",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "permissions",
    "webNavigation",
    "tabs",
    "contextMenus",
    "notifications"
  ],
  "host_permissions": [
    "http://127.0.0.1:6800/*",
    "http://localhost:6800/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": ["content.js", "assets/*.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
